---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'MindState - Create Personalized Binaural Beats Sessions',
	description = 'The only binaural beats app that lets you design completely personalized audio sessions from scratch. Professional-grade tools for creating sessions that match your exact preferences.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
	</head>
	<body class="antialiased bg-bhutan-primary text-bhutan-primary">
		<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm border-b border-bhutan-light" style="background-color: var(--bg-primary); opacity: 0.95;">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<a href="/" class="flex items-center transition-opacity hover:opacity-80">
							<img 
								src="/images/LogoLarge.svg" 
								alt="MindState - Create Personalized Binaural Beats Sessions"
								class="h-10 w-auto"
							/>
						</a>
					</div>
					<div class="hidden md:flex items-center space-x-8">
						<a href="#features" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">Features</a>
						<a href="#how-it-works" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">How It Works</a>
						<a href="#screenshots" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">Screenshots</a>
						<a href="#download" class="px-4 py-2 rounded-lg transition-colors text-white bg-bhutan-accent hover:opacity-90">
							Download
						</a>
					</div>
					<button class="md:hidden p-2 text-bhutan-secondary" id="mobile-menu-button" aria-label="Toggle menu">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</button>
				</div>
			</div>
			<div class="md:hidden hidden bg-bhutan-primary border-t border-bhutan-light" id="mobile-menu">
				<div class="px-4 pt-2 pb-4 space-y-2">
					<a href="#features" class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">Features</a>
					<a href="#how-it-works" class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">How It Works</a>
					<a href="#screenshots" class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">Screenshots</a>
					<a href="#download" class="block py-2 text-white px-4 rounded-lg text-center transition-colors bg-bhutan-accent hover:opacity-90">Download</a>
				</div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer class="py-12 mt-20 bg-bhutan-secondary text-bhutan-secondary">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-semibold mb-4 text-bhutan-primary">MindState</h3>
						<p class="text-sm text-bhutan-secondary">
							Create personalized binaural beats sessions tailored to your preferences.
						</p>
					</div>
					<div>
						<h4 class="font-semibold mb-4 text-bhutan-primary">Links</h4>
						<ul class="space-y-2 text-sm">
							<li><a href="#features" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">Features</a></li>
							<li><a href="#how-it-works" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">How It Works</a></li>
							<li><a href="#screenshots" class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">Screenshots</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold mb-4 text-bhutan-primary">Download</h4>
						<p class="text-sm text-bhutan-secondary">
							Available on the Google Play Store
						</p>
					</div>
				</div>
				<div class="border-t border-bhutan-light mt-8 pt-8 text-center text-sm text-bhutan-secondary">
					<p>&copy; 2024 MindState. All rights reserved.</p>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle
			const menuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			
			if (menuButton && mobileMenu) {
				menuButton.addEventListener('click', () => {
					mobileMenu.classList.toggle('hidden');
				});
			}
		</script>
	</body>
</html>

