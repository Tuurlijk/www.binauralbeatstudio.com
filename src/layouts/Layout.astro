---
import '../styles/global.css';
import { getLocale } from 'astro-i18n-aut';
import { loadTranslations, t, getLocalizedHashLink } from '../utils/i18n';
import type { Locale } from '../i18n/types';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
	title?: string;
	description?: string;
}

const locale = getLocale(Astro.url) as Locale;
const translations = await loadTranslations(locale);
const base = import.meta.env.BASE_URL;

const title = Astro.props.title || t('meta.title', locale, translations);
const description = Astro.props.description || t('meta.description', locale, translations);

// Generate hreflang tags for all locales
const locales: Locale[] = ['en', 'ar', 'es', 'hi', 'id', 'pt', 'ru', 'zh'];
// Extract path without locale prefix
let currentPath = Astro.url.pathname;
const localeMatch = currentPath.match(/^\/(en|ar|es|hi|id|pt|ru|zh)\//);
if (localeMatch) {
  currentPath = currentPath.replace(`/${localeMatch[1]}/`, '/');
}
// Ensure currentPath starts with /
if (!currentPath.startsWith('/')) {
  currentPath = '/' + currentPath;
}
const isRTL = locale === 'ar';
---

<!doctype html>
<html lang={locale} dir={isRTL ? 'rtl' : 'ltr'}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<link rel="icon" type="image/png" sizes="32x32" href={`${base}favicon-32x32.png`} />
		<link rel="icon" type="image/png" sizes="16x16" href={`${base}favicon-16x16.png`} />
		<link rel="icon" type="image/png" sizes="48x48" href={`${base}favicon-48x48.png`} />
		<link rel="icon" type="image/png" sizes="64x64" href={`${base}favicon-64x64.png`} />
		<link rel="icon" type="image/png" sizes="96x96" href={`${base}favicon-96x96.png`} />
		<link rel="icon" type="image/png" sizes="128x128" href={`${base}favicon-128x128.png`} />
		<link rel="apple-touch-icon" sizes="180x180" href={`${base}apple-touch-icon.png`} />
		<link rel="apple-touch-icon" sizes="152x152" href={`${base}apple-touch-icon-152x152.png`} />
		<link rel="apple-touch-icon" sizes="167x167" href={`${base}apple-touch-icon-167x167.png`} />
		<link rel="manifest" href={`${base}site.webmanifest`} />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		
		<!-- hreflang tags for SEO -->
		{locales.map((loc) => {
			const localePath = loc === 'en' ? '' : `${loc}/`;
			const cleanPath = currentPath === '/' ? '' : currentPath.slice(1);
			return (
				<link
					rel="alternate"
					hreflang={loc}
					href={`https://binauralbeatstudio.com/${localePath}${cleanPath}`}
				/>
			);
		})}
		<link rel="alternate" hreflang="x-default" href={`https://binauralbeatstudio.com${currentPath === '/' ? '' : currentPath}`} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:locale" content={locale} />
		{locales.map((loc) => (
			<meta property="og:locale:alternate" content={loc} />
		))}
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<style>
			/* CSS-only mobile menu toggle */
			#mobile-menu-toggle:checked ~ #mobile-menu-wrapper #mobile-menu {
				display: block !important;
			}
			#mobile-menu-toggle:not(:checked) ~ #mobile-menu-wrapper #mobile-menu {
				display: none;
			}
		</style>
	</head>
	<body class={`antialiased bg-bhutan-primary text-bhutan-primary ${isRTL ? 'rtl' : 'ltr'}`}>
		<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm border-b border-bhutan-light" style="background-color: var(--bg-primary); opacity: 0.95;">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<a href={base} class="flex items-center transition-opacity hover:opacity-80">
							<img 
								src={`${base}images/LogoLarge.svg`}
								alt="MindState - Create Personalized Binaural Beats Sessions"
								class="h-10 w-auto"
							/>
						</a>
					</div>
					<div class="hidden md:flex items-center space-x-8">
						<a href={getLocalizedHashLink('#features', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.features', locale, translations)}</a>
						<a href={getLocalizedHashLink('#how-it-works', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.howItWorks', locale, translations)}</a>
						<a href={getLocalizedHashLink('#screenshots', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.screenshots', locale, translations)}</a>
						<a href={getLocalizedHashLink('#download', locale, base)} class="px-4 py-2 rounded-lg transition-colors text-white bg-bhutan-accent hover:opacity-90">
							{t('nav.download', locale, translations)}
						</a>
						<LanguageSwitcher />
					</div>
					<label for="mobile-menu-toggle" class="md:hidden p-2 text-bhutan-secondary cursor-pointer" aria-label="Toggle menu">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</label>
					<input type="checkbox" id="mobile-menu-toggle" class="hidden" />
				</div>
			</div>
			<div id="mobile-menu-wrapper">
				<div class="md:hidden hidden bg-bhutan-primary border-t border-bhutan-light" id="mobile-menu">
				<div class="px-4 pt-2 pb-4 space-y-2">
					<a href={getLocalizedHashLink('#features', locale, base)} class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.features', locale, translations)}</a>
					<a href={getLocalizedHashLink('#how-it-works', locale, base)} class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.howItWorks', locale, translations)}</a>
					<a href={getLocalizedHashLink('#screenshots', locale, base)} class="block py-2 transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.screenshots', locale, translations)}</a>
					<a href={getLocalizedHashLink('#download', locale, base)} class="block py-2 text-white px-4 rounded-lg text-center transition-colors bg-bhutan-accent hover:opacity-90">{t('nav.download', locale, translations)}</a>
				</div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer class="py-12 mt-20 bg-bhutan-secondary text-bhutan-secondary">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-semibold mb-4 text-bhutan-primary">MindState</h3>
						<p class="text-sm text-bhutan-secondary">
							{t('footer.description', locale, translations)}
						</p>
					</div>
					<div>
						<h4 class="font-semibold mb-4 text-bhutan-primary">{t('footer.links', locale, translations)}</h4>
						<ul class="space-y-2 text-sm">
							<li><a href={getLocalizedHashLink('#features', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.features', locale, translations)}</a></li>
							<li><a href={getLocalizedHashLink('#how-it-works', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.howItWorks', locale, translations)}</a></li>
							<li><a href={getLocalizedHashLink('#screenshots', locale, base)} class="transition-colors text-bhutan-secondary hover:text-bhutan-accent">{t('nav.screenshots', locale, translations)}</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold mb-4 text-bhutan-primary">{t('footer.download', locale, translations)}</h4>
						<p class="text-sm text-bhutan-secondary">
							{t('footer.downloadDescription', locale, translations)}
						</p>
					</div>
				</div>
				<div class="border-t border-bhutan-light mt-8 pt-8 text-center text-sm text-bhutan-secondary">
					<p>{t('footer.copyright', locale, translations)}</p>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle (enhancement - works without JS via checkbox)
			// The checkbox already handles visibility via CSS, this is just for smooth transitions
		</script>
	</body>
</html>

