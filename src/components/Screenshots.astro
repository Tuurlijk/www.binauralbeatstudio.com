---
const base = import.meta.env.BASE_URL;
---

<section id="screenshots" class="py-20 px-4 sm:px-6 lg:px-8 bg-bhutan-primary">
	<div class="max-w-7xl mx-auto">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold mb-4 text-bhutan-primary">
				See It In Action
			</h2>
			<p class="text-xl max-w-3xl mx-auto text-bhutan-secondary">
				Professional interface with Material Design 3, dark mode, and full localization
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<!-- Screenshot 1: Session Browser -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_session_browser_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_session_browser_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_session_browser_light.png`}
						alt="Session Browser showing list of binaural beats sessions"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">Session Browser</p>
			</div>

			<!-- Screenshot 2: Session Editor -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_session_editor_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_session_editor_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_session_editor_light.png`}
						alt="Session Editor for creating and editing binaural beats sessions"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">Session Editor</p>
			</div>

			<!-- Screenshot 3: Track Editor -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_track_editor_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_track_editor_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_track_editor_light.png`}
						alt="Track Editor for configuring individual audio tracks"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">Track Editor</p>
			</div>

			<!-- Screenshot 4: Main Player -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_main_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_main_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_main_light.png`}
						alt="Main player screen for playing binaural beats sessions"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">Main Player</p>
			</div>

			<!-- Screenshot 5: Point Editor -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_point_editor_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_point_editor_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_point_editor_light.png`}
						alt="Point Editor for adjusting volume envelopes and timing"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">Volume Envelopes</p>
			</div>

			<!-- Screenshot 6: QR Code Display -->
			<div class="bg-bhutan-secondary rounded-2xl p-4 shadow-lg hover:shadow-xl transition-shadow">
				<picture>
					<source srcset={`${base}images/phone_qr_display_dark.png`} media="(prefers-color-scheme: dark)" />
					<source srcset={`${base}images/phone_qr_display_light.png`} media="(prefers-color-scheme: light)" />
					<img 
						src={`${base}images/phone_qr_display_light.png`}
						alt="QR Code display for sharing binaural beats sessions"
						class="rounded-lg w-full aspect-[9/16] object-cover"
						loading="lazy"
					/>
				</picture>
				<p class="text-center mt-4 font-medium text-bhutan-primary">QR Code Sharing</p>
			</div>
		</div>
	</div>
</section>
